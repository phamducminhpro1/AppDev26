<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobDescriptionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarJobDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator">
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/mainImageView"
        android:layout_width="367dp"
        android:layout_height="211dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137"
        app:srcCompat="@drawable/c_plus_plus" />

    <TextView
        android:id="@+id/title"
        android:layout_width="366dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/mainImageView"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="@+id/mainImageView"
        app:layout_constraintTop_toBottomOf="@+id/mainImageView" />

    <TextView
        android:id="@+id/description"
        android:layout_width="364dp"
        android:layout_height="216dp"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        android:textSize="30dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title" />

    <TextView
        android:id="@+id/DescriptionTitle"
        android:layout_width="214dp"
        android:layout_height="26dp"
        android:layout_marginBottom="13dp"
        android:text="Description"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title" />

    <TextView
        android:id="@+id/AddressText"
        android:layout_width="164dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/CityText"
        app:layout_constraintStart_toStartOf="@+id/mainImageView"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/CityText"
        android:layout_width="191dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/mainImageView"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/applyButton"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:text="Apply"
        android:textStyle="bold"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="@+id/mainImageView"
        app:layout_constraintTop_toBottomOf="@+id/AddressText" />

    <ImageButton
        android:id="@+id/Des_bookmarkButton"
        android:layout_width="69dp"
        android:layout_height="54dp"
        app:layout_constraintEnd_toEndOf="@+id/mainImageView"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toEndOf="@+id/applyButton"
        app:layout_constraintTop_toTopOf="@+id/applyButton"
        app:srcCompat="@drawable/ic_baseline_bookmark_border_24" />

</androidx.constraintlayout.widget.ConstraintLayout>